{
  "id": "greatboardgames",
  "name": "Great Board Games",
  "enabled": true,
  "type": "html_scraper",
  "baseURL": "https://www.greatboardgames.ca",
  "headers": {
    "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"
  },
  "scraper": {
    "searchPath": "/search?q={query}",
    "cardSplitter": "<div class=\"product-card",
    "titlePatterns": [
      "<a href=\"(https://www\\.greatboardgames\\.ca/games/[^\"]+)\"[^>]*class=\"text-dark\"[^>]*>([^<]+)</a>"
    ],
    "titleGroups": {"url": 1, "title": 2},
    "pricePatterns": [
      {"pattern": "<span[^>]*>\\$([0-9]+\\.[0-9]{2})</span>", "groups": {"amount": 1}}
    ],
    "pricePrefix": "$",
    "outOfStockIndicators": ["Out of Stock"],
    "inStockIndicators": [],
    "stockLogic": "out_of_stock"
  }
}
